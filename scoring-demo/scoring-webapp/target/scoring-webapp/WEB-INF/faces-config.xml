<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>locale.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<managed-bean>
		<managed-bean-name>mbFinancialTransactions</managed-bean-name>
		<managed-bean-class>ru.com.bpc.payment.upop.web.mb.MbFinancialTransactions</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>transactionLogServices</property-name>
			<value>#{transactionLogServices}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>mbReports</managed-bean-name>
		<managed-bean-class>ru.com.bpc.payment.upop.web.mb.MbReports</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>transactionLogServices</property-name>
			<value>#{transactionLogServices}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>mbConfiguration</managed-bean-name>
		<managed-bean-class>ru.com.bpc.payment.upop.web.mb.MbConfiguration</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>securityServices</property-name>
			<value>#{securityServices}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>mbAuthentication</managed-bean-name>
		<managed-bean-class>ru.com.bpc.payment.upop.web.mb.MbAuthentication</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>securityServices</property-name>
			<value>#{securityServices}</value>
		</managed-property>
	</managed-bean>

	<navigation-rule>
		<from-view-id>/loginPage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginSuccess</from-outcome>
			<to-view-id>/faces/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/loginPage.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


</faces-config>
